{
  "name": "microlib_node",
  "version": "0.0.0-semantic-release.0",
  "description": "starting package",
  "main": "dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "test:watch": "npm t -- -w",
    "test": "mocha src/index.test.js --compilers js:babel-register",
    "cover":"nyc npm t",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "build": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "prebuild": "rimraf dist",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lalitrhombus/microlib.git"
  },
  "keywords": [
    "microlib"
  ],
  "author": "lalit chaturvedi (http://www.lalitchaturvedi.me/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lalitrhombus/microlib/issues"
  },
  "homepage": "https://github.com/lalitrhombus/microlib#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "devDependencies": {
    "babel-cli": "6.9.0",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-stage-2": "6.5.0",
    "babel-register": "6.9.0",
    "chai": "3.5.0",
    "codecov.io": "0.1.6",
    "commitizen": "2.8.1",
    "cz-conventional-changelog": "1.1.6",
    "ghooks": "1.2.1",
    "istanbul": "0.4.3",
    "mocha": "2.5.3",
    "rimraf": "2.5.2",
    "semantic-release": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run cover && npm run check-coverage"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  }
}
